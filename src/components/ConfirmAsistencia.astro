---
import Confirmaletter from "@/assets/svg/Confirmaletter.svg";
import Whatsapp from "@/assets/svg/Whatsapp.svg";
---

<style>
    #confirmAsistencia {
        background-image: url("../../public/img/confirmafoto.webp");
        background-size: cover;
        background-position: center;
        /* font-family: "Dancing Script", cursive; */
        font-optical-sizing: auto;
        font-weight: bold;
        font-style: normal;
        position: relative;
        overflow: hidden;
    }

    #confirmAsistencia::before {
        content: "";
        position: absolute;
        inset: 0;
        background-color: rgba(255, 255, 255, 0.4);
        z-index: 2;
    }

    .overlay {
        width: 100%;
        height: 100%;
        position: absolute;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    #confirmAsistencia > .z-10 {
        position: relative;
        z-index: 3;
    }
</style>

<section
    class="min-h-[35rem] bg-cover bg-center flex flex-col items-center justify-center text-black text-center"
    id="confirmAsistencia"
>
    <!-- Overlay oscuro -->
    <div class="overlay"></div>

    <div
        class="z-10 rounded-md h-full flex flex-col items-center justify-around"
    >
        <Confirmaletter class={"mb-8"} />
        <div
            class="flex items-center justify-center flex-col px-4 pt-12 mt-12 text-2xl md:text-4xl font-bold gap-2"
        >
            <a
                href="https://wa.me/573209601775?text=Hola,%20confirmo%20mi%20asistencia%20al%20evento."
                target="_blank"
            >
                <button
                    type="button"
                    class="btn bg-transparent outline-0 border-2 px-10 py-3 rounded-full text-center flex flex-col items-center justify-center cursor-pointer"
                >
                    Haz clic aqu√≠
                </button>
            </a>
            <Whatsapp class="w-20 h-20" />
        </div>
    </div>
</section>
